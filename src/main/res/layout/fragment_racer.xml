<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainContent"
    android:background="#AADDDD">

    <TextView
        android:id="@+id/txtLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Latitude: "/>

    <TextView
        android:id="@+id/dispLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/txtLat"
        android:text="0"/>

    <TextView
        android:id="@+id/txtLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Longitude: "
        android:layout_below="@+id/txtLat"
        />

    <TextView
        android:id="@+id/dispLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dispLat"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/txtLng"
        android:text="0"/>

    <TextView
        android:id="@+id/txtSog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Speed: "
        android:layout_below="@+id/txtLng"/>

    <TextView
        android:id="@+id/dispSog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/txtSog"
        android:layout_below="@+id/dispLng"
        android:text="0"/>

    <TextView
        android:id="@+id/txtCog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Course: "
        android:layout_below="@+id/txtSog"/>

    <TextView
        android:id="@+id/dispCog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/txtCog"
        android:layout_below="@+id/dispSog"
        android:text="0"/>

    <Button
        android:id="@+id/btnLeave"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
